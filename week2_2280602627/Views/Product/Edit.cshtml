@model week2_2280602627.Models.Product

@{
    ViewData["Title"] = "Chỉnh sửa sản phẩm";
}

<div class="container mt-4">
    <div class="card shadow-sm border-dark">
        <div class="card-header bg-dark text-white text-center">
            <h3 class="fw-bold">Chỉnh sửa sản phẩm</h3>
        </div>
        <div class="card-body bg-light text-dark">
            <form asp-action="Edit" enctype="multipart/form-data">
                <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                <!-- Ảnh sản phẩm -->
                <div class="text-center mb-3">
                    <img id="productPreview" src="@Model.ImageUrl" class="img-thumbnail border border-secondary" style="max-height: 250px;" />
                </div>

                <input type="hidden" asp-for="Id" />

                <div class="row">
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label asp-for="Name" class="form-label fw-bold text-dark"></label>
                            <input asp-for="Name" class="form-control border-dark bg-white text-dark" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Price" class="form-label fw-bold text-dark"></label>
                            <input asp-for="Price" class="form-control border-dark bg-white text-dark" type="number" step="0.01" />
                            <span asp-validation-for="Price" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Description" class="form-label fw-bold text-dark"></label>
                            <textarea asp-for="Description" class="form-control border-dark bg-white text-dark" rows="3"></textarea>
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="mb-3">
                            <label asp-for="CategoryId" class="form-label fw-bold text-dark"></label>
                            <input asp-for="CategoryId" class="form-control border-dark bg-white text-dark" />
                            <span asp-validation-for="CategoryId" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label class="form-label fw-bold text-dark">Đường dẫn ảnh hiện tại</label>
                            <input asp-for="ImageUrl" class="form-control border-dark bg-white text-dark" readonly />
                        </div>

                        <!-- Upload ảnh mới -->
                        <div class="mb-3">
                            <label class="form-label fw-bold text-dark">Tải ảnh mới</label>
                            <input type="file" class="form-control border-dark bg-white text-dark" id="imageUpload" name="imageFile" accept="image/*" />
                        </div>
                    </div>
                </div>

                <div class="d-flex justify-content-between">
                    <a asp-action="Index" class="btn btn-outline-secondary">Quay lại danh sách</a>
                    <button type="submit" class="btn btn-dark">Lưu thay đổi</button>
                </div>
            </form>
        </div>
    </div>
</div>
