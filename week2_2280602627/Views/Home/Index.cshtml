@model IEnumerable<week2_2280602627.Models.Product>

@{
    ViewData["Title"] = "Home Page";
}

<div class="container">
    <h2 class="mt-4">Danh sách sản phẩm</h2>
    <div class="row">
        @foreach (var product in Model)
        {
            <div class="col-md-4">
                <div class="card mb-4 shadow-sm">
                    <img src="@product.ImageUrl" class="card-img-top" alt="@product.Name" style="height:200px; object-fit:cover;">
                    <div class="card-body">
                        <h5 class="card-title">@product.Name</h5>
                        <p class="card-text">@product.Description</p>
                        <div class="d-flex justify-content-between align-items-center">
                            <span class="text-muted">@product.Price.ToString("C")</span>
                            <a href="@Url.Action("Details", "Product", new { id = product.Id })" class="btn btn-sm btn-outline-secondary">Chi tiết</a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
