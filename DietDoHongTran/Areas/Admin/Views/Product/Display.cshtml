@model DietDoHongTran.Models.Product

@{
    ViewData["Title"] = "Product Details";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">
    <div class="card shadow-lg border-0" style="background-color: #f8f9fa; border-radius: 10px;">
        <div class="card-header text-center bg-dark text-white">
            <h2 class="m-0">Chi tiết sản phẩm</h2>
        </div>

        <div class="card-body">
            <div class="row">
                <!-- Ảnh sản phẩm -->
                <div class="col-md-4 text-center">
                    @if (!string.IsNullOrEmpty(Model.ImageUrl))
                    {
                        <img src="@Model.ImageUrl" alt="@Model.Name" class="img-fluid rounded" style="max-height: 250px; border: 1px solid #ddd;">
                    }
                    else
                    {
                        <img src="/images/no-image.jpg" alt="No Image" class="img-fluid rounded" style="max-height: 250px; border: 1px solid #ddd;">
                    }
                </div>

                <!-- Thông tin sản phẩm -->
                <div class="col-md-8">
                    <dl class="row">
                        <dt class="col-sm-4 text-muted">Tên sản phẩm</dt>
                        <dd class="col-sm-8 font-weight-bold">@Html.DisplayFor(model => model.Name)</dd>

                        <dt class="col-sm-4 text-muted">Giá</dt>
                        <dd class="col-sm-8 font-italic">@Html.DisplayFor(model => model.Price) VND</dd>

                        <dt class="col-sm-4 text-muted">Mô tả</dt>
                        <dd class="col-sm-8">
                        <dd class="col-sm-8">@Html.Raw(Model.Description)</dd>
                        <dt class="col-sm-4 text-muted">Danh mục</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.Category.Name)</dd>
                    </dl>
                </div>
            </div>
        </div>

        <div class="card-footer text-center">
            <a asp-area="Admin" asp-controller="Product" asp-action="Index" class="btn btn-secondary">
                <i class="fas fa-arrow-left"></i> Quay lại danh sách
            </a>
        </div>
    </div>
</div>
