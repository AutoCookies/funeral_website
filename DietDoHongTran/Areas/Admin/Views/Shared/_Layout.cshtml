@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Tưởng Niệm - Diệt Độ Hồng Trần</title>
    <!-- Bootstrap CSS -->
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="~/css/style.css">
    <style>
        /* Đảm bảo body luôn có chiều cao tối thiểu 100vh */
        body {
            background-color: #f4f4f4; /* Nền sáng hơn */
            color: #333333; /* Màu chữ tối dễ đọc */
            font-family: "Times New Roman", serif;
            display: flex;
            flex-direction: column;
            min-height: 100vh; /* Chiều cao tối thiểu 100% màn hình */
        }

        header, footer {
            background-color: #2c3e50; /* Màu xanh đậm cho header và footer */
            padding: 20px 0;
        }

        header {
            position: sticky;
            top: 0;
            z-index: 1000;
        }

        footer {
            background-color: #34495e;
            padding: 20px;
            margin-top: auto; /* Đảm bảo footer luôn ở cuối */
        }

        .navbar-dark .navbar-nav .nav-link {
            color: #ecf0f1; /* Màu sáng cho các link trong navbar */
            font-size: 1.1rem;
        }

        .navbar-brand img {
            max-height: 50px;
        }

        /* Nội dung chính */
        .main-content {
            flex-grow: 1; /* Chiếm không gian còn lại */
            padding-bottom: 60px; /* Để tránh che khuất bởi footer */
        }

        footer h3, footer p {
            color: #bdc3c7; /* Màu sáng cho văn bản trong footer */
        }

    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark">
            <div class="container">
                <a class="navbar-brand" href="#">
                    <img src="~/images/solemn-logo.png" alt="Logo" class="img-fluid">
                </a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav ml-auto">
                        <li class="nav-item">
                            <a class="nav-link" href="/Admin/Service/Index">Services</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/Admin/Product/Index">Products</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/Admin/Categories/Index">Categories</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="AdminInvoice" asp-action="Index">📋 Quản lý hóa đơn</a>
                        </li>
                        <li>
                            <a class="nav-link" asp-controller="Home" asp-action="Index">Trang chủ</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <main class="container my-4 main-content">
        @RenderBody()
    </main>

    <footer class="text-center p-4">
        <div class="container">
            <div class="row">
                <div class="col-md-4">
                    <h3>Tưởng Niệm</h3>
                    <p>Kỷ niệm những giá trị cuộc sống và di sản tinh thần</p>
                </div>
                <div class="col-md-4">
                    <h3>Thông Tin</h3>
                    <p>Hướng dẫn và dịch vụ tang lễ</p>
                </div>
                <div class="col-md-4">
                    <h3>Liên Hệ</h3>
                    <p>Số điện thoại: 0123 456 789</p>
                    <p>Email: lienhe@tangle.com</p>
                </div>
            </div>
        </div>
    </footer>
    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.2/dist/js/bootstrap.bundle.min.js"></script>

    @RenderSection("Scripts", required: false)
</body>
</html>
