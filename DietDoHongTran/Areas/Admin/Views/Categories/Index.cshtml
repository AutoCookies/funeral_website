@model IEnumerable<DietDoHongTran.Models.Category>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<style>
    /* Bảng sẽ có đường viền rõ ràng */
    #categoryTable {
        width: 100%;
        border-collapse: collapse;
    }

        /* Đường viền cho các ô trong bảng */
        #categoryTable th, #categoryTable td {
            border: 1px solid #ddd;
            padding: 8px;
            text-align: left;
        }

        /* Nền của bảng và các ô tiêu đề */
        #categoryTable th {
            background-color: #007bff;
            color: white;
            font-weight: bold;
        }

        /* Các dòng lẻ có màu nền nhẹ nhàng để phân biệt */
        #categoryTable tbody tr:nth-child(odd) {
            background-color: #f9f9f9;
        }

        /* Thêm hiệu ứng hover khi di chuột qua các dòng */
        #categoryTable tbody tr:hover {
            background-color: #f1f1f1;
            cursor: pointer;
        }

        /* Các liên kết (Edit, Details, Delete) */
        #categoryTable td a {
            text-decoration: none;
            color: #007bff;
            padding: 5px 10px;
            border-radius: 5px;
            transition: background-color 0.3s ease;
        }

            /* Hiệu ứng khi di chuột qua các liên kết */
            #categoryTable td a:hover {
                background-color: #e9ecef;
            }

        /* Thêm khoảng cách và căn giữa cho các liên kết */
        #categoryTable td {
            text-align: center;
        }

    /* Đảm bảo thanh tìm kiếm có khoảng cách hợp lý */
    .dataTables_filter input {
        border-radius: 5px;
        padding: 5px;
        margin-left: 10px;
    }

    /* Thiết lập chiều rộng cho cột khi có nhiều dữ liệu */
    #categoryTable td:nth-child(1) {
        max-width: 300px;
        white-space: nowrap;
        overflow: hidden;
        text-overflow: ellipsis;
    }
</style>


<h1>Index</h1>

<p>
    <a asp-action="Add">Create New</a>
</p>
<table id="categoryTable" class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                <a asp-action="Update" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>


<!-- Include jQuery first -->
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

<!-- Include DataTables CSS for 2.x version -->
<link href="https://cdn.datatables.net/2.2.2/css/dataTables.dataTables.min.css" rel="stylesheet">

<!-- Include DataTables JS for 2.x version -->
<script src="https://cdn.datatables.net/2.2.2/js/dataTables.min.js"></script>

<!-- Initialize DataTable -->
<script>
    $(document).ready(function () {
        // Initialize DataTable on #productTable
        new DataTable('#categoryTable', {
            paging: true,
            searching: true,
            ordering: true,
            pageLength: 10
        });
    });
</script>