@model IEnumerable<DietDoHongTran.Models.ApplicationUser>

@{
    ViewData["Title"] = "Quản lý người dùng";
}

<h2>@ViewData["Title"]</h2>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Email</th>
            <th>Họ tên</th>
            <th>Hành động</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.Email</td>
                <td>@user.FullName</td>
                <td>
                    <a asp-area="Admin" asp-controller="UserManagement" asp-action="Details" asp-route-id="@user.Id" class="btn btn-info btn-sm">Chi tiết</a>
                    <a asp-area="Admin" asp-controller="UserManagement" asp-action="ManageRoles" asp-route-id="@user.Id" class="btn btn-warning btn-sm">Quản lý vai trò</a>
                    <a asp-area="Admin" asp-controller="UserManagement" asp-action="Delete" asp-route-id="@user.Id" class="btn btn-danger btn-sm">Xóa</a>
                </td>
            </tr>
        }
    </tbody>
</table>
