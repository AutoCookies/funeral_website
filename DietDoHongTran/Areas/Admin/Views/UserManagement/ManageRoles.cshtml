@model DietDoHongTran.ViewModels.ManageUserRolesViewModel

@{
    ViewData["Title"] = "Quản lý vai trò người dùng";
}

<h2>@ViewData["Title"]</h2>
<p><strong>Email:</strong> @Model.Email</p>

<form asp-area="Admin" asp-controller="UserManagement" asp-action="ManageRoles" method="post">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="UserId" />

    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Vai trò</th>
                <th>Chọn</th>
            </tr>
        </thead>
        <tbody>
            @for (int i = 0; i < Model.Roles.Count; i++)
            {
                <tr>
                    <td>@Model.Roles[i].RoleName</td>
                    <td>
                        <input asp-for="Roles[i].Selected" />
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <button type="submit" class="btn btn-primary">Cập nhật vai trò</button>
</form>
